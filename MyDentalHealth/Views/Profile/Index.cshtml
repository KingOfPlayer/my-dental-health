<div>
	<h1 class="mx-5 px-5 text-center">Hi @User?.Name</h1>
	<hr />
	<div class="container mb-2">
		<h4 class="px-4 text-center">Personal Info</h4>
		<p class="px-2 text-center">There is your personal info</p>
	</div>
	<div class="container my-3">
		<div class="d-flex align-items-start align-items-stretch border border-1 rounded-4 mx-5 my-5">
			<div class="m-5 my-4 w-20 text-center ">
				<i class="fa-solid fa-id-card fa-10x"></i>
			</div>
			<div class="vr my-3"></div>
			<div class="h-100 ">
			</div>
			<div class="col container mx-5 my-3">
				<div class="row">
					<p class="fs-3">Basic Info</p>
					<hr />
				</div>
				<div class="row">
					<ul class="list-group list-group-flush">

						<a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between" asp-action="Name">
							<p class="fs-6 my-0 w-25">Name</p>
							<p class="fs-5 my-0 w-25">@User?.Name</p>
							<i class="fa-solid fa-angle-right"></i>
						</a>

						<a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between" asp-action="Surname">
							<p class="fs-6 my-0 w-25">Surname</p>
							<p class="fs-5 my-0 w-25">@User?.Surname</p>
							<i class="fa-solid fa-angle-right"></i>
						</a>

						<a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between" asp-action="Birthday">
							<p class="fs-6 my-0 w-25">Birthday Date</p>
							<p class="fs-5 my-0 w-25">@User?.BirthdayDate.ToString("dd MMMM yyyy")</p>
							<i class="fa-solid fa-angle-right"></i>
						</a>
					</ul>
				</div>
			</div>
		</div>
		<div class="d-flex align-items-start align-items-stretch border border-1 rounded-4 mx-5 my-5">
			<div class="m-5 my-4 w-20 text-center">
				<i class="fa-solid fa-envelope fa-10x"></i>
			</div>
			<div class="vr my-3"></div>
			<div class="h-100 ">
			</div>
			<div class="col container mx-5 my-3">
				<div class="row">
					<p class="fs-3">Contact</p>
					<hr />
				</div>
				<div class="row">
					<ul class="list-group list-group-flush ">
						<a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between" asp-action="Email">
							<p class="fs-6 my-0 w-25">Mail Adress</p>
							<p class="fs-5 my-0 w-25">@User?.Email</p>
							<i class="fa-solid fa-angle-right"></i>
						</a>
					</ul>
				</div>
			</div>
		</div>		
		<div class="d-flex align-items-start align-items-stretch border border-1 rounded-4 mx-5 my-5">
			<div class="m-5 my-4 w-20 text-center">
				<i class="fa-solid fa-key fa-10x"></i>
			</div>
			<div class="vr my-3"></div>
			<div class="h-100 ">
			</div>
			<div class="col container mx-5 my-3">
				<div class="row">
					<p class="fs-3">Security</p>
					<hr />
				</div>
				<div class="row">
					<ul class="list-group list-group-flush ">
						<a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between" asp-action="Password">
							<p class="fs-6 my-0 w-25">Password</p>
							<p class="fs-5 my-0 w-25">********</p>
							<i class="fa-solid fa-angle-right"></i>
						</a>
					</ul>
				</div>
			</div>
		</div>	
	</div>
</div>