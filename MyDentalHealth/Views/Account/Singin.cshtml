@model UserLoginDataDto

<form method="post" asp-action="Singin" class="needs-validation" novalidate>
	<h1>Oturum aç</h1>
	<div class="form-group my-2">
		<label asp-for="Email"></label>
		<input asp-for="Email" class="form-control @(ViewData.ModelState["Err_Email"] is not null?"is-invalid":"")" title="" required\>
		<div id="Email" class="invalid-feedback">
			@ViewData.ModelState["Err_Email"]?.Errors?[0].ErrorMessage
		</div>
	</div>
	<div class="form-group my-2">
		<label asp-for="Password"></label>
		<input asp-for="Password" class="form-control @(ViewData.ModelState["Err_Password"] is not null?"is-invalid":"")" required\>
		<div id="Password" class="invalid-feedback">
			@ViewData.ModelState["Err_Password"]?.Errors?[0].ErrorMessage
		</div>
	</div>
	<div class="form-group my-2">
		<button type="submit" class="btn btn-primary w-100">Giriş Yap <i class="fa-solid fa-key"></i></button>
		<p class="text-center"><a class="link-info" asp-action="Singup">Yeni Hesap Oluştur</a> / <a class="link-info" asp-action="Recovery">Şifremi Unuttum</a></p>
	</div>
</form>