@model RecoveryPasswordDto

<form method="post" asp-action="ResetPassword" class="needs-validation" novalidate>
	<h1>Yeni Şifre</h1>
	<div class="form-group my-2">
		<label asp-for="Password"></label>
		<input asp-for="Password" class="form-control @(ViewData.ModelState["Err_Password"] is not null?"is-invalid":"")" title="" pattern="(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9]).{8,}" required\>
		<div id="Password" class="invalid-feedback">
			@ViewData.ModelState["Err_Password"]?.Errors?[0].ErrorMessage
		</div>
	</div>
	<div class="form-group my-2">
		<label asp-for="ValidatePassword"></label>
		<input asp-for="ValidatePassword" class="form-control @(ViewData.ModelState["Err_ValidatePassword"] is not null?"is-invalid":"")" title="" pattern="(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9]).{8,}" required\>
		<div id="ValidatePassword" class="invalid-feedback">
			@ViewData.ModelState["Err_ValidatePassword"]?.Errors?[0].ErrorMessage
		</div>
	</div>
	<input asp-for="h" type="hidden"\>
	<input asp-for="t" type="hidden"\>
	<input asp-for="u" type="hidden"\>

	@if (ViewData.ModelState["Success"] is not null)
	{
		<div class="form-group my-2 alert alert-success" role="alert">
			@ViewData.ModelState["Success"]?.Errors?[0].ErrorMessage
		</div>
	}
	<div class="form-group my-2">
		<button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
	</div>
</form>